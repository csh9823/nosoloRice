	<beans:bean id="businessUserService" class="com.nosolorice.app.service.BusinessUserServiceImpl" />
	<beans:bean id="businessUserDao" class="com.nosolorice.app.dao.BusinessUserDaoImpl" />
	
	<beans:bean id="NormalUserService" class="com.nosolorice.app.service.NormalUserServiceImpl" />
	<beans:bean id="NormalUserDao" class="com.nosolorice.app.dao.normalUserDaoImpl" /> -->
	
	<context:component-scan base-package="com.nosolorice.app" />
	
	<view-controller path="/normalJoin" view-name="member/normalJoinForm" />
	
	<view-controller path="/normalJoinResult" view-name="member/normalJoinResult" />
	
	<view-controller path="/chatting" view-name="member/chatting" />
	
	<!-- 자주 묻는 질문 페이지 -->
	<view-controller path="/question" view-name="/question"/>	
	
	<!-- websocket -->
	<websocket:handlers>
		<websocket:mapping handler="chattingHandler" path="/chatting"/>
		<websocket:sockjs></websocket:sockjs>
	</websocket:handlers>
	
	<beans:bean id="chattingHandler" class="com.nosolorice.app.handler.ChattingHandler"/>	
	
</beans:beans>
